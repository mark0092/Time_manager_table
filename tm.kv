#:kivy 1.11.1
#:import MDLabel kivymd.label.MDLabel
#:import MDTextField kivymd.textfields.MDTextField
#:import MDRaisedButton kivymd.button.MDRaisedButton

<ItemButton@MDRaisedButton>:
	font_size: '20sp'

<Container>:
	rows: 6
	padding: 10
	spacing: '10dp'

	start_b: start_button
	cancel_b: cancel_button
	time_view: watch_stop

	MDLabel:
		id: watch_stop
		size_hint: (1, 0.35)
		halign: 'center'
		font_size: 50
		text: "0:0:0"
		color: (0, 0, 0, 1)

	GridLayout:
		cols: 2
		spacing: '10dp'
		size_hint: (1, 0.15)
		ItemButton:
			id: start_button
			size_hint: (1, 1)
			text: "Start"

			on_release:
				root.start_click()

		ItemButton:
			id: cancel_button 
			size_hint: (1, 1)
			text: "Cancel"

			on_release:
				root.break_time()

	AnchorLayout:
		MDTextField:
			multiline: False

	ItemButton:
		size_hint: (1, 0.15)
		text: "Save"


	ItemButton:
		size_hint: (1, 0.15)
		text: "Archive"